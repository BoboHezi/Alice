<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginVertical="5dp"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:textColor="#000"
                android:text="物流详情"/>

            <ImageView
                android:onClick="close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/deliver_close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#555"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/dinamicx_tao"/>

            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:text="订单号: 595566558495552555855"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingVertical="20dp"
            android:src="@drawable/without_deliver_info"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:background="#fff"
        android:layout_gravity="bottom">

        <View
            android:layout_width="20dp"
            android:layout_height="1px"
            android:background="#6000"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/msg"/>

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_centerHorizontal="true"
            android:text="本信息由快递公司提供，支付宝提供展示"/>

        <View
            android:layout_width="20dp"
            android:layout_height="1px"
            android:background="#6000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/msg"/>
    </RelativeLayout>
</FrameLayout>
