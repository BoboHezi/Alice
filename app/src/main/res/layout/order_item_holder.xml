<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/round_corner_bg"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_order_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/order_type_tm" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/icon_order_type"
            android:text="索尼官方旗舰店"
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shop_name"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="交易成功"
            android:textColor="#f05a0e" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/goods_shortcut_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/order_prices"
            android:layout_toRightOf="@id/goods_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="【Marimo】马里莫 营养液（辅助品，非必须），迷你水培植物盆栽。小萌球，小精灵"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/goods_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营养液" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff2ec"
                android:text="全程保价"
                android:textColor="#f05a0e"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_prices"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:minWidth="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥1699.00"
                android:textAlignment="viewEnd"
                android:textColor="#000" />

            <TextView
                android:id="@+id/goods_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textAlignment="viewEnd" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end">

        <TextView
            android:id="@+id/order_amount_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总价￥50.00" />

        <TextView
            android:id="@+id/order_pay_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="实付款￥50.00"
            android:textColor="#000" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="更多"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/extra_bt_bg"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="加入购物车" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/extra_bt_bg"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="买了换钱" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/extra_bt_bg"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="申请售后" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>